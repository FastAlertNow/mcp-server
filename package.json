{
  "name": "fastalert-mcp-server",
  "description": "Official MCP server for FastAlert, providing tools to list channels and send notifications.",
  "private": false,
  "version": "1.3.1",
  "mcpName": "io.github.FastAlertNow/mcp-server",
  "type": "module",
  "bin": {
    "fastalert-mcp-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "kill -9 $(lsof -ti:6277) 2>/dev/null || true && npx @modelcontextprotocol/inspector build/index.js",
    "start": "node build/index.js"
  },
  "keywords": [
    "mcp",
    "fastalert",
    "notifications",
    "channels",
    "agentic-web"
  ],
  "author": "FastAlert",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FastAlertNow/mcp-server"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "form-data": "^4.0.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/express-session": "^1.18.2",
    "@types/node": "^24.7.0",
    "typescript": "^5.9.3"
  }
}
